<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SesionUser</servlet-name>
        <servlet-class>Controller.SesionUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Paciente</servlet-name>
        <servlet-class>Controller.Paciente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cliente</servlet-name>
        <servlet-class>Controller.Cliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SesionUser</servlet-name>
        <url-pattern>/SesionUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/views/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <jsp-file>/views/dashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>pacientes</servlet-name>
        <jsp-file>/views/pacientes.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>pacientes</servlet-name>
        <url-pattern>/pacientes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>editar_paciente</servlet-name>
        <jsp-file>/views/editar_paciente.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>editar_paciente</servlet-name>
        <url-pattern>/editar_paciente</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>clientes</servlet-name>
        <jsp-file>/views/clientes.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>clientes</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>editar_cliente</servlet-name>
        <jsp-file>/views/editar_cliente.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>editar_cliente</servlet-name>
        <url-pattern>/editar_cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Paciente</servlet-name>
        <url-pattern>/Paciente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cliente</servlet-name>
        <url-pattern>/Cliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
